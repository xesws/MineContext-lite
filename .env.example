# MineContext-v2 Environment Configuration
# Copy this file to .env and fill in your values

# OpenAI API Configuration (optional, for AI features)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Configuration (optional, alternative to OpenAI)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenRouter API Configuration (optional, unified interface for multiple models)
OPENROUTER_API_KEY=api-key-here

# Server Configuration (optional, overrides config.yaml)
# Uncomment and modify these values to customize server settings
# Note: Command line arguments (e.g., python run.py -p 8080) take precedence over these
SERVER_HOST=127.0.0.1
SERVER_PORT=8000
SERVER_DEBUG=false
